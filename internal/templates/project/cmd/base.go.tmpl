package cmd

import (
	"github.com/spf13/cobra"
	"{{.module}}/pkg/logger"
	"os"
	"os/signal"
)

func RunBase(cmd *cobra.Command, args []string) {
	start()
	logger.Info("All server model is started.")
	flag := make(chan os.Signal)
	signal.Notify(flag, os.Interrupt, os.Kill)
	<-flag
	stop()
	logger.Info("Stop server. Bye~")
}

func start() {}
func stop() {}